<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application>
        <resource-bundle>
            <base-name>/BundleCliente</base-name>
            <var>bundleCliente</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/BundleFornecedor</base-name>
            <var>bundleFornecedor</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/BundleFuncionario</base-name>
            <var>bundleFuncionario</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/BundleProduto</base-name>
            <var>bundleProduto</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/BundlePrincipal</base-name>
            <var>bundlePrincipal</var>
        </resource-bundle>
        <lifecycle>
            <phase-listener>br.com.util.VerificarAcesso</phase-listener>
        </lifecycle>

    </application>
</faces-config>





